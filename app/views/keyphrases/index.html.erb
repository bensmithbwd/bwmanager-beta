<%= search_form_for(@q, :html => {:class => 'form-inline' }) do |f| %>
  <div class="pull-right">
    <%= f.text_field :keyphrase_cont, :class => 'span2 search-query', :placeholder => 'Search...' %>
    <%= link_to ("<p class='text-right'><br><i class='icon-remove'></i> Remove Filters</p>").html_safe, keyphrases_path if params[:q] %>
  </div>
<% end %>

<div class="page-header">
  <h1>Keyphrases <small>Make sure you lock the cave when you leave</small></h1>
</div>

<table class='table table-condensed table-striped'>
  <tr>
  	<th><%= sort_link @q, :id, "#" %></th>
    <th><%= sort_link @q, :keyphrase, "Keyphrase" %></th>
    <th class='span2'></th>
  </tr>

<% @keyphrases.each do |keyphrase| %>
  <tr>
    <td><%= keyphrase.id %></td>
    <td><%= keyphrase.keyphrase %></td>
    <td>
    	<%= link_to ("<i class='icon-pencil'></i>").html_safe, edit_keyphrase_path(keyphrase), :class => 'btn btn-mini' %>
    	<%= link_to ("<i class='icon-trash icon-white'></i>").html_safe, keyphrase, method: :delete, :class => 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to DELETE Keyphrase [#{keyphrase.id}]?" } %>
  	</td>
  </tr>
<% end %>
</table>

<%= will_paginate @campaigns %>