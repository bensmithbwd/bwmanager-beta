<div class="page-header">
  <h1>Forgot your password? <small>I swore it was 4 uppercase howls followed by 6 lowercase growls</small></h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", :class => 'btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
