<%= simple_form_for(@sale_line) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :amount %>
    <%= f.input :quantity %>
    <%= f.input :optional %>
    <%= f.association :sale %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
