<div class="pull-right">
	<%= link_to 'New Client', new_client_path, :class => 'btn' %>
	<%= link_to 'New Campaign', new_campaign_path, :class => 'btn' %>
</div>

<h3>Clients</h3>

<table class='table table-condensed table-striped'>
  <thead>
  	<tr>
	    <th>Name</th>
	    <th>Company</th>
	    <th>Phone1</th>
	    <th>Phone2</th>
	    <th>Phone3</th>
	    <th>Email</th>
	    <th>Address</th>
	    <th>Leadsource</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.company %></td>
    <td><%= client.phone1 %></td>
    <td><%= client.phone2 %></td>
    <td><%= client.phone3 %></td>
    <td><%= client.email %></td>
    <td><%= client.address %></td>
    <td><%= client.leadsource %></td>
    <td><%= link_to 'Show', client, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_client_path(client), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', client, method: :delete, :class => 'btn btn-mini btn-danger', data: { confirm: "Are you sure you wish to delete #{client.name} (#{client.company})?" } %></td>
  </tr>
<% end %>
</tbody>
</table>
